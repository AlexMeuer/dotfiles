#!/usr/bin/env sh
if ! command -v brew &> /dev/null; then
    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
fi

brew tap homebrew/cask-versions
brew tap homebrew/cask-fonts
brew install \
        git gh exa bat ranger btop fzf \
        lolcat thefuck neofetch \
        shellcheck \
        nvim visual-studio-code \
        spotify spotify-tui spotifyd \
        zoom slack notion discord-canary \
        brave-browser 1password raycast ubersicht \
        font-hack

git clone https://github.com/Jean-Tinland/simple-bar.git "${HOME}/Library/Application Support/Ãœbersicht/widgets/simple-bar"

if ! command -v yabai &> /dev/null; then
    echo -e "\n (!) Yabai installation requires partially disabling SIP.\n     Install manually: https://github.com/koekeishiya/yabai\n"
fi
